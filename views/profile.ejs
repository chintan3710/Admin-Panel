<%- include('header') %>
<style>
    .item{
        display: block;
        height: 40px;
        width: 40px;
        border-radius: 50%;
        background: #e5e5e5;
        position: absolute;
        top: 0;
        right: 0;
    }
    .item i{
        font-size: 20px;
        color: #808080;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    .profile-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
    }
    </style>
<!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- DATA TABLE -->
                                <h3 class="title-5 m-b-35">data table</h3>
                                <div class="table-responsive table-responsive-data2 position-relative">
                                    <table class="table table-data2">
                                        <tbody>
                                            <tr>
                                                <td class="py-3- px-4">
                                                    <img src="<%= locals.user.adminImage %>" class="rounded-circle profile-image"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="py-3 px-4">Name: &nbsp;<%= locals.user.name %></td>
                                            </tr>
                                            <tr>
                                                <td class="py-3 px-4">Email: &nbsp;<%= locals.user.email %></td>
                                            </tr>
                                            <tr>
                                                <td class="py-3 px-4">Gender: &nbsp;<%= locals.user.gender %></td>
                                            </tr>
                                            <tr>
                                                <td class="py-3 px-4">Hobby: &nbsp;<%= locals.user.hobby %></td>
                                            </tr>
                                            <tr>
                                                <td class="py-3 px-4">City: &nbsp;<%= locals.user.city %></td>
                                            </tr>
                                            <tr>
                                                <td class="py-3 px-4">Description: &nbsp;<%= locals.user.description %></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <a href="/admin/updateProfile/<%= locals.user._id %>" class="item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                </div>
                                <!-- END DATA TABLE -->
                            </div>
                        </div>

<%- include('footer') %>
